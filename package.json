{
  "name": "code2word-converter",
  "version": "1.0.0",
  "description": "用于快速自动将代码文件转为Word文档",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "electron",
    "code",
    "word",
    "document",
    "converter",
    "gitignore",
    "project"
  ],
  "author": "CyrilGuo",
  "license": "Apache License2.0",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "docx": "^8.5.0",
    "ignore": "^5.3.0",
    "fs-extra": "^11.2.0",
    "commander": "^11.1.0",
    "highlight.js": "^11.9.0",
    "mime-types": "^2.1.35",
    "chokidar": "^3.5.3"
  },
  "build": {
    "appId": "com.code2word.converter",
    "productName": "Code2Word Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    }
  }
}