{
  "name": "code2word-converter",
  "version": "1.0.0",
  "description": "Convert code projects to Word documents with intelligent file filtering and formatting",
  "main": "src/main/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/"
  },
  "keywords": [
    "electron",
    "code",
    "word",
    "document",
    "converter",
    "gitignore",
    "project"
  ],
  "author": "Code2Word Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1"
  },
  "dependencies": {
    "docx": "^8.5.0",
    "ignore": "^5.3.0",
    "fs-extra": "^11.2.0",
    "commander": "^11.1.0",
    "highlight.js": "^11.9.0",
    "mime-types": "^2.1.35",
    "chokidar": "^3.5.3"
  },
  "build": {
    "appId": "com.code2word.converter",
    "productName": "Code2Word Converter",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "assets/icon.png"
    }
  }
}